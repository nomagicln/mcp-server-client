{
  "name": "mcpsc",
  "version": "0.1.0",
  "description": "MCP Server Client - A Node.js + TypeScript CLI tool for MCP protocol gateway middleware",
  "main": "dist/index.js",
  "bin": {
    "mcpsc": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/integration/end-to-end",
    "test:coverage": "jest --coverage",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "package": "npm run clean && npm run build",
    "prepare": "husky install"
  },
  "keywords": [
    "mcp",
    "cli",
    "typescript",
    "protocol",
    "gateway",
    "middleware"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "oclif": {
    "bin": "mcpsc",
    "dirname": "mcpsc",
    "commands": "./dist/cli/commands",
    "plugins": [
      "@oclif/plugin-help"
    ],
    "topicSeparator": " ",
    "topics": {
      "config": {
        "description": "manage configuration settings"
      }
    }
  },
  "dependencies": {
    "@oclif/core": "^3.15.1",
    "@oclif/plugin-help": "^6.0.8",
    "chokidar": "^4.0.3",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.3",
    "js-yaml": "^4.1.0",
    "pino": "^8.17.2",
    "prom-client": "^15.1.0",
    "ssh2": "^1.15.0",
    "undici": "^6.2.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/chokidar": "^1.7.5",
    "@types/jest": "^29.5.8",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/ssh2": "^1.11.19",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.2"
  }
}
