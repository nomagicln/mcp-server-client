{
  "server": {
    "host": "localhost",
    "port": 3000,
    "transports": ["sse"]
  },
  "client": {
    "timeout": 30000
  },
  "resources": {
    "paths": ["./resources"],
    "remote": []
  },
  "security": {
    "tls": {
      "minVersion": "1.3"
    }
  },
  "monitoring": {
    "enabled": true,
    "metricsPort": 9090
  },
  "logging": {
    "level": "info",
    "format": "json"
  }
}